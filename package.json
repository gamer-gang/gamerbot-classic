{
  "name": "gamerbot",
  "version": "0.1.0",
  "license": "MIT",
  "author": "gamer-gang",
  "repository": {
    "url": "https://github.com/gamer-gang/gamerbot.git"
  },
  "packageManager": "yarn@3.0.1",
  "description": "ae",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "w:common": "yarn workspace @gamerbot/common watch",
    "w:core": "yarn workspace @gamerbot/core watch",
    "w:music": "yarn workspace @gamerbot/music watch",
    "w:util": "yarn workspace @gamerbot/util watch",
    "watch": "concurrently -c 'red,blue,magenta,green' npm:w:common npm:w:core npm:w:music npm:w:util",
    "dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "build": "docker build . -f Dockerfile.build --tag gamerbot_build:latest"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@discordjs/opus": "^0.6.0",
    "@mikro-orm/cli": "^4.5.9",
    "@mikro-orm/core": "^4.5.9",
    "@mikro-orm/migrations": "^4.5.9",
    "@mikro-orm/postgresql": "^4.5.9",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "bufferutil": "^4.0.3",
    "libsodium-wrappers": "^0.7.9",
    "utf-8-validate": "^5.0.5",
    "zlib-sync": "^0.1.7"
  },
  "devDependencies": {
    "@types/libsodium-wrappers": "^0.7.9",
    "@types/node": "^16.7.10",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "concurrently": "^6.2.1",
    "eslint": "^7.32.0",
    "node-gyp": "^8.2.0",
    "prettier": "^2.3.2",
    "typescript": "4.4.2"
  }
}
